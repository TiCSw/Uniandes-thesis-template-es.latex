            \footnotesize{\indent\parbox[t]{425pt}{\centerline{Grupo de construcci\'{o}n de software}}}
        \end{textblock*}

			
        %Main section
        \if@centersections
            \begin{textblock*}{0mm}[0,0.5](50mm,180mm)
        \else
            \begin{textblock*}{0mm}(25mm,100mm)
        \fi

	        %DIVIDER
                 \begin{tabular*}{153mm}{c}
                      ~\\  \hline  ~
                 \end{tabular*}

                %Section one: Title
                {\fontsize{\@sectonesize}{\@sectoneskip}\selectfont\parbox{153mm}{{\@sectone}}}
						
